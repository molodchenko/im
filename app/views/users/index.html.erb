<div class="container">
  <div class="row">
    <%= link_to "All Users", :action => "index" %>
    |
    <%= link_to "Users awaiting approval", :action => "index", :approved => "false" %>
    <div class="column">
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
